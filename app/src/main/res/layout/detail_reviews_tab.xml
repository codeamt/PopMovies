<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/detailReviewsTab"
    android:orientation="vertical"
    android:background="@color/black">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_marginTop="@dimen/spacing10dp"
        android:id="@+id/reviewScrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_marginBottom="@dimen/spacing100dp"
            android:layout_marginLeft="@dimen/spacing10dp"
            android:layout_marginRight="@dimen/spacing10dp"
            android:layout_marginTop="@dimen/spacing100dp"
            android:id="@+id/reviewScrollViewContainer">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing10dp"
                android:layout_marginBottom="@dimen/spacing150dp"
                android:orientation="vertical"
                android:id="@+id/reviewsList">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>